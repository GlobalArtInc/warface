{
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "dist",
    "allowJs": true,
    "resolveJsonModule": true,
    "target": "es6",
    "lib": [
      "ESNext",
      "ESNext.Array",
      "ESNext.AsyncIterable",
      "ESNext.Intl",
      "ESNext.Symbol",
      "dom"
    ],
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": true,
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*", "./src/**/*.json", "./src/views/*", "./src/**/*.jpg", "./src/**/*.png"],
  "exclude": ["node_modules", ".vscode"]
}
